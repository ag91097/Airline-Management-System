<div class="row mt-5">
        <div class="col-md-6 m-auto">
          <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-search"></i> Search</h1>
            <form action="/showall" method="GET">
              <div class="form-group">
                  <label>From</label>
                    <select name="from_loc" class = "form-control">
                            <option></option>
                        <% result1.forEach(function(result){ %>
                            <option value="<%= result.from_loc%>"><%= result.from_loc%></option>
                        <% })%>
                    </select>
              </div>

              <div class="form-group">
                    <label>To</label>
                      <select name="to_loc" class = "form-control">
                              <option></option>
                          <% result2.forEach(function(result){ %>
                              <option value="<%= result.to_loc%>"><%= result.to_loc%></option>
                          <% })%>
                      </select>
                </div>

              <div class="form-group">
                <label>Date</label>
                <input
                  type="date"
                  name="date"
                  class="form-control"
                />
              </div>
              <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
          </div>
        </div>
      </div>
